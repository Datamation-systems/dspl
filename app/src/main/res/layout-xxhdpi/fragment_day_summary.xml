<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/fragment_day_summary_center_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/fragment_day_summary_pslv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_day_summary_card_header"
        android:clipToPadding="false"
        android:paddingBottom="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_day_summary_card_header"
        android:background="?android:colorBackground"/>

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_day_summary_card_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/fragment_day_summary_select_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:paddingRight="15dp"
                android:paddingLeft="5dp"
                android:text="2015.02.02"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Sales"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fragment_day_summary_card_tv_header"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/half_black" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_gross_sale_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_header"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:paddingLeft="15dp"
                android:text="Gross Sale"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_gross_sale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_gross_sale_label"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|start"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_gross_sale_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_gross_sale"
                android:layout_below="@+id/fragment_day_summary_card_tv_gross_sale"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:text="(0.00%)"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_market_return_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_header"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_gross_sale"
                android:gravity="start"
                android:text="Return"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_market_return"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_market_return_label"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_gross_sale"
                android:gravity="bottom|start"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_discount_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_header"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_market_return"
                android:gravity="bottom"
                android:text="Discount"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_discount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_discount_label"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_market_return"
                android:gravity="bottom|start"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_discount_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_discount"
                android:layout_below="@+id/fragment_day_summary_card_tv_discount"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:text="(100%)"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_net_sale_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fragment_day_summary_card_tv_net_sale"
                android:layout_below="@+id/fragment_day_summary_card_tv_header"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:text="Net Sale"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_net_sale"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/fragment_day_summary_card_tv_net_sale_label"
                android:layout_marginRight="16dp"
                android:gravity="bottom|start"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_collections_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_net_sale"
                android:layout_marginLeft="15dp"
                android:text="Collections"
                android:visibility="gone"
                android:textColor="@color/primary_text_default_material_light"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fragment_day_summary_card_tv_collections_header"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/half_black" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_credit_header"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_collections_header"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center"
                android:text="Credit"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_cash_header"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_collections_header"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center"
                android:text="Cash"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_cheque_header"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_collections_header"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_cash_header"
                android:gravity="center"
                android:text="Cheque"
                android:textSize="14sp" />

            <View
                android:id="@+id/fragment_day_summary_card_center_view"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_credit_header"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@+id/fragment_day_summary_card_tv_credit_header"
                android:gravity="center_vertical"
                android:text="Day" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_credit"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_credit_header"
                android:layout_toLeftOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_credit_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_day_credit"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:paddingRight="5dp"
                android:text="(0.00%)"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_cash"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_credit_header"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_cash_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_day_cash"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:paddingRight="5dp"
                android:text="(0.00%)"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_cheque"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_credit_header"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_day_cash"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_day_cheque_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_day_cheque"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:paddingRight="5dp"
                android:text="(0.00%)"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit_percentage"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@+id/fragment_day_summary_card_tv_credit_header"
                android:gravity="center_vertical"
                android:text="Previous" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_credit"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit_percentage"
                android:layout_toLeftOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_credit_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_previous_credit"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:paddingRight="5dp"
                android:text="(0.00%)"
                android:visibility="gone"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_cash"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit_percentage"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_cash_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_previous_cash"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:paddingRight="5dp"
                android:text="(0.00%)"
                android:visibility="gone"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_cheque"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_day_credit_percentage"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_previous_cash"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_previous_cheque_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_previous_cheque"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit"
                android:layout_marginLeft="15dp"
                android:gravity="bottom|end"
                android:paddingRight="5dp"
                android:text="(0.00%)"
                android:visibility="gone"
                android:textColor="@android:color/primary_text_light"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit_percentage"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_previous_cash"
                android:background="@color/half_black" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit_percentage"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_previous_cash"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_below="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_previous_cash"
                android:background="@color/half_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_below="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_tv_previous_cash"
                android:background="@color/half_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit_percentage"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/fragment_day_summary_card_tv_total_cheque"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:background="@color/half_black" />

            <TextView
                android:id="@+id/fragment_day_summary_card_tv_total_cash"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_day_summary_card_tv_previous_credit_percentage"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="0.00"
                android:textColor="@android:color/primary_text_light" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_total_cash"
                android:layout_below="@+id/fragment_day_summary_card_tv_total_cash"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:background="@color/half_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignRight="@+id/fragment_day_summary_card_tv_total_cash"
                android:layout_below="@+id/fragment_day_summary_card_tv_total_cash"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/fragment_day_summary_card_center_view"
                android:background="@color/half_black" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>